[solution]
name = SnakeGame

include = 3rdparty/3rdparty.buildscript

[project:SnakeGame]
type = exe
if(Windows)
{
    subsystem = Windows
}
sources = src/**/*.cpp
headers = src/**/*.h
includes = src
if(Windows)
{
target_link_libraries(SDL3)
}
std = 20
if(Linux)
{
    includes = ${SDL3_INCLUDE_DIRS}
    libs = ${SDL3_LIBRARIES}
    libdirs = ${SDL3_LIBRARY_DIRS}
}